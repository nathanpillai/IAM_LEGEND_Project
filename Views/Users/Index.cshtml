@model IEnumerable<IAMLegend.Dtos.UserDto>
<h2>Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Domain</th>
            <th>UserName</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Admin</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Domain</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.IsAdmin</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserProfileId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@user.UserProfileId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@user.UserProfileId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New User</a>
